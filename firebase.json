{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/@(ads.txt|app-ads.txt)",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/plain"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/ads.txt",
        "destination": "/ads.txt"
      },
      {
        "source": "/app-ads.txt",
        "destination": "/app-ads.txt"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}